        </div>
        <div class="form-group">
            <label asp-for="ChoreId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ChoreId" class ="form-control" asp-items="ViewBag.ChoreId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompletedDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompletedDate" class="form-control" />
                <span asp-validation-for="CompletedDate" class="text-danger"></span>
            </div>
        </div>
